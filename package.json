{
  "name": "mate-ui",
  "version": "0.0.1",
  "description": "Mate UI library",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "@stencil/sass": "^0.0.5"
  },
  "devDependencies": {
    "@stencil/core": "^0.10.0",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1",
    "tslint": "^5.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belatrix/ui-bucket.git"
  },
  "author": "Ionic Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/belatrix/ui-bucket"
  },
  "homepage": "https://github.com/belatrix/ui-bucket",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
